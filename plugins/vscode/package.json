{
	"name": "nanocoder-vscode",
	"displayName": "Nanocoder",
	"description": "VS Code integration for Nanocoder - local-first AI coding assistant",
	"version": "0.1.0",
	"publisher": "nanocollective",
	"repository": {
		"type": "git",
		"url": "https://github.com/Nano-Collective/nanocoder.git"
	},
	"engines": {
		"vscode": "^1.85.0"
	},
	"categories": [
		"Programming Languages",
		"Machine Learning",
		"Other"
	],
	"keywords": [
		"ai",
		"coding",
		"assistant",
		"nanocoder",
		"ollama",
		"local"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./dist/extension.js",
	"icon": "media/icon.png",
	"contributes": {
		"commands": [
			{
				"command": "nanocoder.askAboutSelection",
				"title": "Ask Nanocoder About Selection",
				"category": "Nanocoder"
			},
			{
				"command": "nanocoder.openChat",
				"title": "Open Chat Panel",
				"category": "Nanocoder"
			},
			{
				"command": "nanocoder.connect",
				"title": "Connect to Nanocoder",
				"category": "Nanocoder"
			},
			{
				"command": "nanocoder.disconnect",
				"title": "Disconnect from Nanocoder",
				"category": "Nanocoder"
			},
			{
				"command": "nanocoder.applyDiff",
				"title": "Apply Changes",
				"category": "Nanocoder"
			},
			{
				"command": "nanocoder.rejectDiff",
				"title": "Reject Changes",
				"category": "Nanocoder"
			},
			{
				"command": "nanocoder.startCli",
				"title": "Start Nanocoder CLI",
				"category": "Nanocoder"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "nanocoder.askAboutSelection",
					"group": "nanocoder",
					"when": "editorHasSelection"
				}
			],
			"explorer/context": [
				{
					"command": "nanocoder.askAboutSelection",
					"group": "nanocoder"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "nanocoder",
					"title": "Nanocoder",
					"icon": "media/icon.svg"
				}
			]
		},
		"views": {
			"nanocoder": [
				{
					"type": "webview",
					"id": "nanocoder.chatPanel",
					"name": "Chat"
				},
				{
					"id": "nanocoder.pendingChanges",
					"name": "Pending Changes"
				}
			]
		},
		"configuration": {
			"title": "Nanocoder",
			"properties": {
				"nanocoder.serverPort": {
					"type": "number",
					"default": 51820,
					"description": "WebSocket server port for communication with Nanocoder CLI"
				},
				"nanocoder.autoConnect": {
					"type": "boolean",
					"default": true,
					"description": "Automatically connect to Nanocoder CLI on startup"
				},
				"nanocoder.autoStartCli": {
					"type": "boolean",
					"default": false,
					"description": "Automatically start Nanocoder CLI if not running"
				},
				"nanocoder.showDiffPreview": {
					"type": "boolean",
					"default": true,
					"description": "Show diff preview before applying file changes"
				}
			}
		},
		"keybindings": [
			{
				"command": "nanocoder.askAboutSelection",
				"key": "ctrl+shift+n",
				"mac": "cmd+shift+n",
				"when": "editorTextFocus"
			},
			{
				"command": "nanocoder.openChat",
				"key": "ctrl+shift+c",
				"mac": "cmd+shift+c"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "pnpm run build",
		"build": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --minify",
		"watch": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --watch",
		"lint": "eslint src --ext ts",
		"package": "pnpm exec vsce package",
		"publish": "pnpm exec vsce publish"
	},
	"devDependencies": {
		"@types/node": "^20.0.0",
		"@types/vscode": "^1.85.0",
		"@types/ws": "^8.5.10",
		"@vscode/vsce": "^3.7.0",
		"esbuild": "^0.20.0",
		"eslint": "^8.57.0",
		"typescript": "^5.3.0"
	},
	"dependencies": {
		"ws": "^8.16.0"
	}
}
