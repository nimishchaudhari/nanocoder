{
	"name": "Nanocoder Development Environment",
	"dockerFile": "Dockerfile",

	// Features to install on top of Dockerfile
	"features": {
		"ghcr.io/devcontainers/features/common-utils:2": {
			"installZsh": true,
			"installOhMyZsh": true,
			"upgradePackages": true,
			"username": "vscode",
			"userUid": "automatic",
			"userGid": "automatic"
		}
	},

	// VS Code extensions to install
	"customizations": {
		"vscode": {
			"extensions": [
				"biomejs.biome",
				"ms-vscode.vscode-typescript-next",
				"esbenp.prettier-vscode",
				"eamodio.gitlens"
			],
			"settings": {
				// Biome as default formatter
				"editor.defaultFormatter": "biomejs.biome",
				"editor.formatOnSave": true,
				"editor.codeActionsOnSave": {
					"quickfix.biome": "explicit",
					"source.organizeImports.biome": "explicit"
				},

				// TypeScript settings
				"typescript.tsdk": "node_modules/typescript/lib",
				"typescript.enablePromptUseWorkspaceTsdk": true,

				// File exclusions for performance
				"files.exclude": {
					"**/.git": true,
					"**/.DS_Store": true,
					"**/node_modules": true,
					"**/dist": true,
					"**/coverage": true
				},

				// Watcher exclusions for performance
				"files.watcherExclude": {
					"**/node_modules/**": true,
					"**/dist/**": true,
					"**/coverage/**": true,
					"**/.git/**": true
				},

				// Terminal settings
				"terminal.integrated.defaultProfile.linux": "zsh",

				// ZSH as default shell
				"terminal.integrated.profiles.linux": {
					"zsh": {
						"path": "zsh"
					}
				}
			}
		}
	},

	// Port forwarding for development servers
	"forwardPorts": [51820],

	// Mounts for caching and persistence
	"mounts": [
		// Cache pnpm store for faster installs
		"source=nanocoder-pnpm-store,target=/home/vscode/.local/share/pnpm/store,type=volume"
	],

	// Run arguments for container configuration
	"runArgs": [
		"--cap-add=SYS_PTRACE",
		"--security-opt",
		"seccomp=unconfined",
		"--name",
		"nanocoder-dev"
	],

	// Lifecycle scripts for setup
	"postCreateCommand": "bash .devcontainer/scripts/post-create.sh",

	// Remote user
	"remoteUser": "vscode"
}
